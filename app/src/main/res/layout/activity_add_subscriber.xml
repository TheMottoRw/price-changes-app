<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubscriber"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:visibility="gone">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <ImageView
            android:id="@+id/splashscreen"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_notifications_active_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:visibility="visible"
            android:layout_marginTop="60dp"
            android:textColor="@color/button_bgcolor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/top_round_container"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_subscriber"
            style="@style/header"
            android:gravity="center" />
        <EditText
            android:id="@+id/name"
            android:hint="@string/subscriber_name"
            android:layout_marginTop="70dp"
            style="@style/edit_text_style"/>
        <EditText
            android:id="@+id/phone"
            android:hint="@string/phone_number"
            android:layout_marginTop="30dp"
            style="@style/edit_text_style"
            android:inputType="number"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:backgroundTint="@color/button_bgcolor"
            app:cornerRadius="10dp"
            android:layout_gravity="center"
            android:paddingVertical="15dp"
            />
    </LinearLayout>

</LinearLayout>